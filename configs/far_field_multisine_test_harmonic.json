{
    "extends": "base_config.json",
    "study_type": "far_field",
    "description": "Baseline: Two separate harmonic simulations at 700 and 2450 MHz for multi-sine validation",
    "phantoms": [
        "thelonious"
    ],
    "frequencies_mhz": [
        700,
        2450
    ],
    "far_field_setup": {
        "type": "environmental",
        "environmental": {
            "incident_directions": [
                "x_pos"
            ],
            "polarizations": [
                "theta"
            ]
        }
    },
    "simulation_parameters": {
        "simulation_time_multiplier": 3.5
    },
    "gridding_parameters": {
        "global_gridding": {
            "grid_mode": "manual",
            "manual_fallback_max_step_mm": 3.0
        },
        "global_gridding_per_frequency": {
            "700": 2.5,
            "2450": 1.482
        }
    },
    "execution_control": {
        "do_setup": true,
        "do_run": true,
        "do_extract": true
    }
}
