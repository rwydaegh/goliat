{
    "extends": "base_config.json",
    "study_type": "far_field",
    "execution_control": {
        "do_setup": true,
        "do_run": false,
        "do_extract": false,
        "only_write_input_file": false,
        "batch_run": false
    },
    "phantoms": [
        "thelonious"
    ],
    "frequencies_mhz": [
        450,
        700,
        835
    ],
    "far_field_setup": {
        "type": "environmental",
        "environmental": {
            "incident_directions": [
                "x_pos",
                "x_neg",
                "y_pos",
                "y_neg",
                "z_pos",
                "z_neg"
            ],
            "polarizations": [
                "theta",
                "phi"
            ]
        },
        "auto_induced": {
            "grid_resolution_deg": 15
        }
    },
    "simulation_parameters": {
        "bbox_padding_mm": 50,
        "simulation_bbox_points": 8,
        "number_of_point_sensors": 2
    },
    "gridding_parameters": {
        "global_gridding": {
            "grid_mode": "manual",
            "manual_fallback_max_step_mm": 5.0
        },
        "global_gridding_per_frequency": {
            "450": 4.0,
            "700": 4.0,
            "835": 4.0
        },
        "padding": {
            "padding_mode": "manual",
            "manual_bottom_padding_mm": [15, 15, 15],
            "manual_top_padding_mm": [15, 15, 15]
        }
    }
}
